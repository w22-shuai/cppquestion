export const prerender = false;

const runtime = Astro.locals.runtime;
const env = runtime?.env;
const timenow = Math.floor(Date.now() / 1000);

let timelast = await env.checkidentity.get("time");
timelast = timelast ? parseInt(timelast) : 0;
if ((timenow - timelast) > 86400) {
    const newToken = crypto.randomUUID();
    await env.checkidentity.put('time', timenow.toString());
    await env.checkidentity.put('cookie', newToken);
    return Astro.redirect("/login");
}

let message = "";
let status = ""; // "success" | "error"

// =========================================================
// 1. 鉴权逻辑
// =========================================================
const userToken = Astro.cookies.get("auth_token")?.value;
let serverToken = null;

if (env?.checkidentity) {
    serverToken = await env.checkidentity.get("cookie");
}

// 验证失败则跳回登录页
if (!userToken || !serverToken || userToken !== serverToken) {
    Astro.cookies.delete("auth_token", { path: "/" });
    return Astro.redirect("/login");
}

// =========================================================
// 2. 插入逻辑 (POST)
// =========================================================
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const key = formData.get("key")?.toString().trim();

        if (!key) {
            message = "内容不能为空";
            status = "error";
        } else {
            // >>> 核心：插入 key，value 强制设为 0 <<<
            const info = await env.cppquestion.prepare(
                "INSERT INTO cppquestion (key, value) VALUES (?, 0)"
            ).bind(key).run();

            if (info.success) {
                message = `提交成功: ${key}`;
                status = "success";
            } else {
                message = "提交失败";
                status = "error";
            }
        }
    } catch (e) {
        // 捕获唯一性约束错误 (例如 key 已存在)
        if (e.message.includes("UNIQUE") || e.message.includes("Constraint")) {
            message = "提交失败：该条目已存在";
        } else {
            message = "系统错误: " + e.message;
        }
        status = "error";
    }
}
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>录入新数据</title>
    <style>
        body { font-family: sans-serif; padding: 50px; display: flex; flex-direction: column; align-items: center; }

        /* 导航栏 */
        .nav { margin-bottom: 20px; font-size: 14px; }
        .nav a { margin: 0 10px; color: #007bff; text-decoration: none; }
        .nav a:hover { text-decoration: underline; }

        /* 表单容器 */
        .box {
            border: 1px solid #ccc; padding: 30px; border-radius: 8px;
            width: 100%; max-width: 400px;
            background: #fff; box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        h3 { margin-top: 0; text-align: center; color: #333; }

        input {
            width: 100%; padding: 12px; margin: 10px 0 20px 0;
            box-sizing: border-box; border: 1px solid #ddd; border-radius: 4px;
            font-size: 16px;
        }

        button {
            width: 100%; padding: 12px; background: #28a745; color: white;
            border: none; cursor: pointer; border-radius: 4px; font-size: 16px; font-weight: bold;
        }
        button:hover { background: #218838; }

        /* 消息提示 */
        .msg {
            margin-bottom: 20px; padding: 12px; border-radius: 4px;
            width: 100%; max-width: 400px; text-align: center; box-sizing: border-box;
        }
        .msg.success { background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
        .msg.error { background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    </style>
</head>
<body>

<div class="nav">
    <a href="/cppquestion">← 返回处理列表</a>
    <span style="color:#ccc">|</span>
    <span>当前: 录入数据</span>
</div>

{message && <div class={`msg ${status}`}>{message}</div>}

<div class="box">
    <h3>录入新条目</h3>
    <p style="font-size: 12px; color: #666; text-align: center; margin-bottom: 20px;">
        默认状态: 未解决 (Value = 0)
    </p>

    <form method="POST">
        <label style="font-weight: bold; display: block; margin-bottom: 5px;">Key 内容</label>
        <input type="text" name="key" placeholder="请输入要添加的内容..." required autofocus>

        <button type="submit">提交</button>
    </form>
</div>

</body>
</html>