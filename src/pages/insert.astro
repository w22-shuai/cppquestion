export const prerender = false;

const runtime = Astro.locals.runtime;
const env = runtime?.env;
const timenow = Math.floor(Date.now() / 1000);

// =========================================================
// 1. 24小时 Token 轮转逻辑
// =========================================================
let timelast = await env.checkidentity.get("time");
timelast = timelast ? parseInt(timelast) : 0;
if ((timenow - timelast) > 86400) {
    const newToken = crypto.randomUUID();
    await env.checkidentity.put('time', timenow.toString());
    await env.checkidentity.put('cookie', newToken);
    return Astro.redirect("/login");
}

let message = "";
let status = ""; // "success" | "error"

// =========================================================
// 2. 鉴权逻辑
// =========================================================
const userToken = Astro.cookies.get("auth_token")?.value;
let serverToken = null;

if (env?.checkidentity) {
    serverToken = await env.checkidentity.get("cookie");
}

if (!userToken || !serverToken || userToken !== serverToken) {
    Astro.cookies.delete("auth_token", { path: "/" });
    return Astro.redirect("/blog/login");
}

// =========================================================
// 3. 插入逻辑 (POST) - 已做防注入处理
// =========================================================
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const key = formData.get("key")?.toString().trim();

        if (!key) {
            message = "⚠️ 内容不能为空";
            status = "error";
        } else {
            // >>> 安全核心：防 SQL 注入 <<<
            // 使用 .bind(key) 而不是字符串拼接。
            // D1 会自动转义 input，无论 key 里包含什么特殊字符，
            // 数据库都只会把它当成纯文本，绝对安全。
            const info = await env.cppquestion.prepare(
                "INSERT INTO cppquestion (key, value) VALUES (?, 0)"
            ).bind(key).run();

            if (info.success) {
                message = "✅ 录入成功";
                status = "success";
            } else {
                message = "❌ 提交失败";
                status = "error";
            }
        }
    } catch (e) {
        if (e.message.includes("UNIQUE") || e.message.includes("Constraint")) {
            message = "⚠️ 提交失败：该内容已存在库中";
        } else {
            message = "❌ 系统错误: " + e.message;
        }
        status = "error";
    }
}
