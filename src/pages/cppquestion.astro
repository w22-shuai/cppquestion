<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>待处理任务</title>
    <style>
        body { font-family: sans-serif; padding: 60px 20px; }

        #submit-btn {
            position: fixed; top: 20px; left: 20px;
            padding: 10px 20px; background: #007bff; color: #fff;
            border: none; border-radius: 5px; cursor: pointer;
            z-index: 100; box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        #submit-btn:hover { background: #0056b3; }
        #submit-btn:disabled { background: #ccc; }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
        }

        .item {
            padding: 15px; border: 1px solid #ddd; border-radius: 6px;
            text-align: center; cursor: pointer; user-select: none;
            word-break: break-all;
        }

        .item.selected {
            background-color: #d4edda; border-color: #28a745; color: #155724;
        }
    </style>
</head>
<body>

<button id="submit-btn" onclick="submitData()">提交完成项</button>

<h3>待处理列表 (Value = 0)</h3>

<div class="grid">
    {results.map((row) => (
            <div class="item" onclick="this.classList.toggle('selected')" data-key={row.key}>
                {row.key}
            </div>
    ))}
</div>

{results.length === 0 && <p style="color:#666; text-align:center;">没有待处理的数据。</p>}

<script>
    async function submitData() {
        const btn = document.getElementById('submit-btn');
        const selected = document.querySelectorAll('.item.selected');

        if (selected.length === 0) return alert("请先选择！");

        const keys = Array.from(selected).map(el => el.getAttribute('data-key'));

        btn.disabled = true;
        btn.innerText = "提交中...";

        try {
            const res = await fetch(window.location.href, {
                method: 'POST',
                body: JSON.stringify(keys)
            });
            if (res.ok) window.location.reload();
            else alert("提交失败");
        } catch (e) {
            alert("错误");
        } finally {
            btn.disabled = false;
            btn.innerText = "提交完成项";
        }
    }
</script>
</body>
</html>